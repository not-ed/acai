<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="AcaiMobile.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:AcaiMobile"
    xmlns:pages="clr-namespace:AcaiMobile.Pages"
    Shell.FlyoutBehavior="Flyout">

    <FlyoutItem Title="Food" Icon="fa6_utensils_solid.svg">
            <ShellContent
                Title="Food Journal"
                ContentTemplate="{DataTemplate local:MainPage}"
                Route="FoodJournalPage" />
    </FlyoutItem>

    <FlyoutItem Title="Settings" Icon="fa6_gear_solid.svg">
            <ShellContent
                Title="Acai Settings"
                ContentTemplate="{DataTemplate pages:SettingsPage}"
                Route="SettingsPage" />
    </FlyoutItem>

</Shell>
