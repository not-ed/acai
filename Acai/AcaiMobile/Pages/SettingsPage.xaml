<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AcaiMobile.Pages.SettingsPage">
    <ContentPage.Content>
        <ScrollView>
            <VerticalStackLayout Spacing="5" Padding="10,10">
                <!-- Journal File Location -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="75*"/>
                        <ColumnDefinition Width="25*"/>
                    </Grid.ColumnDefinitions>

                    <StackLayout Grid.Column="0">
                        <Label x:Name="DisplayedDateLabel" Text="Journal File Location" FontAttributes="Bold"  FontSize="18" HorizontalTextAlignment="Start"></Label>
                        <Label Text="SETTINGS HERE"></Label>
                    </StackLayout>

                    <Button Grid.Column="1" Text="Update"></Button>
                </Grid>


            </VerticalStackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>